depend() {
	need modules
}

start () {
	# just verify that people build their kernel with hotplug support.
	if [ ! -f /proc/sys/kernel/hotplug ] ; then
		eerror "CONFIG_HOTPLUG not enabled for this kernel!"
		return 1
	fi
}
